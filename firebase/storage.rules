service firebase.storage {
	match /b/{bucket}/o {
		match /{namespace} {
			match /certificateHistory/{hash} {
				allow read, write: if false;
			}

			match /channels/{channel} {
				match /{all=**} {
					allow read, write;
				}

				// match /handshake {
				// 	match /alicePublicKey/{hash} {}
				// 	match /bobPublicKey/{hash} {}
				// 	match /initialSecretAliceCyphertext/{hash} {}
